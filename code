    private void radCeltoFarActionPerformed(java.awt.event.ActionEvent evt) {                                            
     
 //To disable everything inside the pannel***************
    txtFarinite.enable(false);
 lblDisplayCel.enable(false);
 btnCalC.enable(false);
 btnClearC.enable(false);
    
 //To enable everything inside the pannel***************    
 if (radCeltoFar.isSelected());
 
 {
 txtFarinite.enable(true);
 lblDisplayCel.enable(true);
 btnCalC.enable(true);
 btnClearC.enable(true);
 }
        
        
    }                                           

    private void radFartoCelActionPerformed(java.awt.event.ActionEvent evt) {                                            

        //To disable everything inside the pannel***************
        txtCelcius.enable(false);
 lblDisplayFarinite.enable(false);
 btnCalF.enable(false);
 btnClear.enable(false);
        //To enable everything inside the pannel***************
        if (radFartoCel.isSelected());
 
 {
     
 txtCelcius.enable(true);
 lblDisplayFarinite.enable(true);
 btnCalF.enable(true);
 btnClear.enable(true);
 }
    }                                           

    private void btnClearCActionPerformed(java.awt.event.ActionEvent evt) {                                          
      //Clear one pannel
        txtFarinite.setText (" ");
 lblDisplayCel.setText (" ");
 
 //Clear radio 
 radCeltoFar.setSelected(false);
    }                                         

    private void btnClearActionPerformed(java.awt.event.ActionEvent evt) {                                         
 //Clear one pannel
        txtCelcius.setText (" ");
 lblDisplayFarinite.setText (" ");
 
 radFartoCel.setSelected(false);
    }                                        

    private void btnCloseActionPerformed(java.awt.event.ActionEvent evt) {                                         
 //Close Program
        System.exit(0);        
    }                                        

    private void btnCalCActionPerformed(java.awt.event.ActionEvent evt) {                                        
    
     double Answer ; 
     
     Answer = (Double.parseDouble(txtFarinite.getText()));
     Answer = Answer * 9/ 5   + 32;  
 if (Answer >200)
 {
 
     lblDisplayCel.setText("Please  enter an amount greater than -200");
 }
 else if (Answer <200)
 {
 
 lblDisplayCel.setText("Please eneter an amount less than 200");
 }
     lblDisplayCel.setText(String.valueOf(Answer));
     
     
    }                                       

    private void btnCalFActionPerformed(java.awt.event.ActionEvent evt) {                                        
       double Answer ; 
       
       Answer = (Double.parseDouble(txtCelcius.getText()) );
       Answer = (Answer - 32) * 5/9;
       
       lblDisplayFarinite.setText(String.valueOf(Answer));
       
       if (Answer >200)
 {
 
     lblDisplayFarinite.setText("Please  enter an amount greater than -200");
 }
 else if (Answer <200)
 {
 
 lblDisplayFarinite.setText("Please eneter an amount less than 200");
 }
     
      
       {
    }
    
    }                                       

